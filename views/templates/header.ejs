<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png"
    href="https://cdn.discordapp.com/attachments/828116217285836825/1107541475576791100/favicon-32x32.png">
  <title>OrcaSwipe</title>

  <!-- Add Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"></script>

  <!-- Add Bootstrap JavaScript and its dependencies -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script>
    // JavaScript code to detect the screen size and set appropriate rendering
    $(document).ready(function () {
      function handleScreenSizeChange() {
        if ($(window).width() < 768) {
          $('.desktop').hide();
          $('.mobile').show();
        } else {
          $('.desktop').show();
          $('.mobile').hide();
        }
      }

      handleScreenSizeChange();

      $(window).resize(function () {
        handleScreenSizeChange();
      });
    });
  </script>

  <link rel="stylesheet" href="/style/style.css">

  <style>
    /* CSS media query for mobile devices */
    @media (max-width: 767px) {
      .desktop {
        display: none;
      }

      .container {
        margin-top: 80px;
        margin-bottom: 80px;
      }

      .offcanvas-toggle {
        position: fixed;
        top: 10px;
        left: 10px;
        z-index: 1040;
        /* Ensure the button is above the offcanvas */
      }
    }

    /* CSS media query for desktop devices */
    @media (min-width: 768px) {

      .navbar-bottom,
      .navbar-top {
        display: none;
      }

      .container {
        display: grid;
        grid-template-columns: 250px 1fr;
        grid-gap: 20px;
        margin-top: 80px;
        margin-bottom: 40px;
      }
    }

    .sidebar {
      background-color: #f1f1f1;
      /* Additional styling for the sidebar */
    }
  </style>
</head>

<body>

  <!-- MOBILE -->
  <div class="mobile">
    <button class="btn btn-primary offcanvas-toggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar">
      Open Sidebar
    </button>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="sidebarLabel">Sidebar</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <!-- Content of the sidebar goes here -->
        <%- include("sidebar") %>
      </div>
    </div>

    <%- include("navbar-bottom") %>
      <%- include("navbar-top") %>
        <div class="container-fluid"></div>
  </div>

  <!-- DESKTOP -->

  <main class="content">
    <div class="container">
      <div class="desktop">
        <%- include("sidebar") %>
      </div>
      <!-- Rest of your content -->